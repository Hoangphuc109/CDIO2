<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="../public/css/home.css">
</head>

<body>
    <%- include('partials/header') %>
        <style>
            a.userList {
                background-color: #04AA6D;
                color: white;
            }
        </style>
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Avatar</th>
                <th>Address</th>
                <th>Role</th>
                <th>Active</th>
                <th>Action</th>
            </tr>

            <% ListEmployee.forEach(function(Em){ %>
                <tr>
                    <td>
                        <%= Em.id %>
                    </td>
                    <td>
                        <%= Em.name %>
                    </td>
                    <td>
                        <%= Em.email %>
                    </td>
                    <td>
                        <%= Em.phone %>
                    </td>
                    <td>
                        <img src="../public/img/<%= Em.avatar %>" alt="Avatar" style="width:50px;height:50px;">
                    </td>
                    <td>
                        <%= Em.address %>
                    </td>
                    <td>
                        <%= Em.role %>
                    </td>
                    <td>
                        <%= Em.active %>
                    </td>
                    <td>
                        <form action="/updateUser/<%= Em.id %>" method="post">
                            <button>Edit</button>
                        </form>
                        <form action="/deleteUser/<%= Em.id %>" method="post">
                            <button>Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </table>

</body>

</html>